<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutBoxID"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#111a21"
    android:gravity="center_vertical"
    android:hapticFeedbackEnabled="false"
    android:orientation="horizontal"
    android:padding="10dp"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="5dp">

        <TextView
            android:id="@+id/textViewReportHiddenID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="hidden id"
            android:textColor="#848484"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewFromID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:text="De: Tour de contrôle"
            android:textColor="#848484"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewAttackerLabelID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Attaquant:"
                android:textColor="#848484" />

            <TextView
                android:id="@+id/textViewAttackerNameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#848484"
                tools:text="Attacker name" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewRessourcesLabelID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ressources:"
                android:textColor="#848484" />

            <TextView
                android:id="@+id/textViewRessourcesTotalID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#848484"
                tools:text="999 999 999" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="fill_parent"
        android:background="#55FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="5dp">

        <TextView
            android:id="@+id/textViewTimeID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:textAlignment="viewEnd"
            android:textColor="@color/colorTitleOrange"
            android:textStyle="bold"
            tools:text=" 13.05.2018 02:38:10 " />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDefenderLabelID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Défenseur:"
                android:textColor="#848484" />

            <TextView
                android:id="@+id/textViewDefenderNameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#848484"
                tools:text="Defender Name" />

        </LinearLayout>

        <TextView
            android:id="@+id/textViewShowReportID"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="bottom"
            android:text="Plus de détails"
            android:textAlignment="viewEnd"
            android:textColor="@color/cardview_light_background" />
    </LinearLayout>

</LinearLayout>