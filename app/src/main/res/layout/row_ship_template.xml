<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutBoxID"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:background="@drawable/build_box"
    android:hapticFeedbackEnabled="false"
    android:orientation="horizontal"
    android:visibility="visible">

    <ImageView
        android:id="@+id/imageViewConstructionID"
        android:layout_width="105dp"
        android:layout_height="114dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/batiment_usine_metal" />

    <LinearLayout
        android:id="@+id/LinearLayoutCol2ID"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="-2dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp">

        <TextView
            android:id="@+id/textView2ConstructionTitleID"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Mine de métal"
            android:textColor="@color/colorTitleOrange"
            android:textStyle="bold"
            tools:text="Mine de métal" />

        <LinearLayout
            android:id="@+id/LinearLayoutText1ID"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewProdTextID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Temps prod : "
                android:textColor="@android:color/background_light" />

            <TextView
                android:id="@+id/textViewProdTimeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="15s"
                android:textColor="@android:color/background_light" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutText2ID"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">



        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutResourcesID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/LinearLayoutResources1ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewRessource1ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/metal_icon_mini" />

                <TextView
                    android:id="@+id/textViewRessource1ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="60"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LinearLayoutResources2ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewRessource2ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/deut_icon_mini" />

                <TextView
                    android:id="@+id/textViewRessource2ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="60"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayoutCol3ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LinearLayoutTitle1ID"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/textViewProdCountTextID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nombre :"
                android:textColor="@android:color/background_light" />
        </LinearLayout>

        <EditText
            android:id="@+id/editTextProdCountID"
            android:layout_width="100dp"
            android:layout_height="35dp"
            android:background="@color/background_light"
            android:ems="10"
            android:inputType="number" />

        <RelativeLayout
            android:id="@+id/RelativeLayoutConstructButtonID"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginTop="35dp">

            <ImageView
                android:id="@+id/imageViewConstructButtonBackgroundID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button_develop_normal" />

            <TextView
                android:id="@+id/textViewConstruciontButtonTextID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="CONSTRUIRE"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="12sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>