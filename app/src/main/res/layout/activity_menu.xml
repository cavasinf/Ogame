<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="florian.com.outerspacemanager.outerspacemanager.MenuActivity">

    <ImageView
        android:id="@+id/imageViewBackgroundID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background_resized" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Header"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/imageViewMetalID"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:elevation="8dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/metal_icon_mini" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textViewMetalTextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Métal"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewMetalID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    tools:text="999 999 999" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="5dp">

                    <ImageView
                        android:id="@+id/imageViewDeutID"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:elevation="8dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/deut_icon_mini" />
                </android.support.v7.widget.CardView>

                <TextView
                    android:id="@+id/textViewDeutTextID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Deuterium"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textViewDeutID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    tools:text="999 999 999" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="75dp"
            android:paddingRight="75dp">

            <ImageView
                android:id="@+id/imageViewPlanetID"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/planet" />

            <ImageView
                android:id="@+id/imageViewMessageID"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_weight="3"
                app:srcCompat="@drawable/message" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="3dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewBackgroundBuildingID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button" />

            <TextView
                android:id="@+id/textViewBuildingTextID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Bâtiments"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="3dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewBackgroundShipID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button" />

            <TextView
                android:id="@+id/textViewShipTextID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Chantier Spatial"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="3dp"
            android:gravity="center_horizontal">

            <ImageView
                    android:id="@+id/imageViewBackgroundResearchID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/button" />

            <TextView
                android:id="@+id/textViewResearchTextID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Recherche"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

            <!--<TextView-->
                    <!--android:id="@+id/textViewResearchTextID"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:gravity="center_vertical|center_horizontal"-->
                    <!--android:text="Recherche"-->
                    <!--android:textAlignment="center"-->
                    <!--android:textAllCaps="true"-->
                    <!--android:textColor="@android:color/background_light"-->
                    <!--android:textStyle="bold"-->
                    <!--android:clickable="false"/>-->
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="3dp"
            android:gravity="center_horizontal">

            <ImageView
                android:id="@+id/imageViewBackgroundSpaceShipID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/button" />

            <TextView
                android:id="@+id/textViewSpaceShipTextID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:text="Flotte"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="@android:color/background_light"
                android:textStyle="bold" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="3dp"
            android:gravity="center_horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/CardViewGalaxyID"
                android:layout_width="260dp"
                android:layout_height="match_parent"
                app:cardBackgroundColor="@android:color/transparent">

                <ImageView
                    android:id="@+id/imageViewBackgroundGalaxyID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/button" />

                <TextView
                    android:id="@+id/textViewGalaxyTextID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="Galaxie"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@android:color/background_light"
                    android:textStyle="bold" />
            </android.support.v7.widget.CardView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewPseudonymeID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                tools:text="textViewPseudonymeID" />

            <TextView
                android:id="@+id/textViewTiretID"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="-"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textViewScoreID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="14sp"
                tools:text="textViewScoreID2" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
