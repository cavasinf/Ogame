<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="florian.com.outerspacemanager.outerspacemanager.LoginActivity">


    <ImageView
        android:id="@+id/imageViewBackgroundID7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/background_resized" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="50dp"
            android:paddingLeft="50dp"
            app:srcCompat="@drawable/ogame_logo" />

        <EditText
            android:id="@+id/editTextEmailID"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:ems="10"
            android:hint="Adresse mail"
            android:inputType="textEmailAddress"
            android:shadowColor="@android:color/background_light"
            android:text="florian.cavasin@laposte.net"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/editTextPseudonymeID"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Pseudonyme"
            android:inputType="text"
            android:shadowColor="@android:color/background_light"
            android:text="cavasinf"
            android:textColor="@android:color/background_light" />

        <EditText
            android:id="@+id/editTextPasswordID"
            android:layout_width="339dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:ems="10"
            android:hint="Mot de passe"
            android:inputType="textPassword"
            android:selectAllOnFocus="false"
            android:shadowColor="@android:color/background_light"
            android:text="1234"
            android:textColor="@android:color/background_light" />

        <Button
            android:id="@+id/buttonConnectID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="25dp"
            android:text="Se connecter"
            android:textAlignment="center" />

        <Button
            android:id="@+id/buttonRegisterID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="S'inscrire" />
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
