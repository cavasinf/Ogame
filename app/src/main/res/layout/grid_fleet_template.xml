<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/LinearLayoutFleetID"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewFleetID"
                app:srcCompat="@drawable/Chasseur_leger"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <ImageView
                android:id="@+id/imageViewOverviewID"
                app:srcCompat="@drawable/overlay_info"
                android:layout_width="match_parent"
                android:layout_height="100dp" />

            <TextView
                android:id="@+id/textViewNumberFleetID"
                tools:text="000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageViewFleetID"
                android:paddingRight="5dp"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="@color/colorTitleOrange" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutSetNumberID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextCountFleetID"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/background_light"
                android:ems="10"
                android:inputType="number" />

            <LinearLayout
                android:id="@+id/LineaLayoutActionButtonID"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewSetMaxID"
                    app:srcCompat="@drawable/set_max"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />

                <!--TODO : selected drawable-->
                <ImageView
                    android:id="@+id/imageViewSetZeroID"
                    app:srcCompat="@drawable/set_zero"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>